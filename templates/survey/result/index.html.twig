{% extends 'base.html.twig' %}

{% block content %}
    <div
        class="row justify-content-between align-items-end fs-1"
    >
        <div
            class="col-auto"
        >
            <small>
                Výsledky
            </small>
        </div>
        <div
            class="col-auto"
        >
            {{ survey.title }}
        </div>
        <div
            class="col-auto ms-auto fs-6"
        >
            účasť: {{ result.answers }} / {{ result.invited }}
        </div>
    </div>

    <div>
        {% for question in result.results %}
            <div
                class="card mb-2"
            >
                <div class="card-header">
                    {{ question.question }}
                </div>
                <ul class="list-group list-group-flush">
                    {% for answer, count in question.answersCount %}
                        <li class="list-group-item">
                            {{ answer }}: {{ count }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
    </div>
{% endblock %}
