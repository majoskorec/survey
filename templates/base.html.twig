<!DOCTYPE html>
<html lang="sk">
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Trauma Kramáre{% endblock %}
        </title>
        <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block stylesheets %}
            <link
                href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
                rel="stylesheet"
                integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
                crossorigin="anonymous"
            >
            <link
                rel="stylesheet"
                href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
            >
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block navbar %}
                <nav
                    class="navbar sticky-top navbar-expand-sm bg-body-tertiary"
                >
                    <div
                        class="container"
                    >
                        <a
                            class="navbar-brand h1 mb-0"
                            href="{{ path(constant('App\\Controller\\DefaultController::ROUTE_NAME')) }}"
                        >
                            Traumna Kramáre
                        </a>
                        <button
                            class="navbar-toggler"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false"
                            aria-label="Toggle navigation"
                        >
                            <span
                                class="navbar-toggler-icon"
                            ></span>
                        </button>
                        <div
                            class="collapse navbar-collapse"
                            id="navbarSupportedContent"
                        >
                            <ul
                                class="navbar-nav me-auto mb-0"
                            >
                                <li
                                    class="nav-item"
                                >
                                    <a
                                        class="nav-link active"
                                        aria-current="page"
                                        href="{{ path(constant('App\\Controller\\Survey\\ListController::ROUTE_NAME')) }}"
                                    >
                                        <i class="bi bi-journal-text"></i> Dotazníky
                                    </a>
                                </li>
                            </ul>
                            <ul class="navbar-nav ms-auto">
                                <li
                                    class="nav-item"
                                >
                                    <a
                                        class="nav-link active"
                                        aria-current="page"
                                        href="{{ path('admin') }}"
                                    >
                                        <i class="bi bi-gear"></i> Admin
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            {% endblock %}

            {% block flashes %}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="container">
                            <div
                                class="alert alert-{{ label }} mt-1"
                                role="alert"
                            >
                                {{ message }}
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}

            <div class="container">
                {% block content %}
                {% endblock %}
            </div>
        {% endblock %}
        {% block javascriptsBody %}
            <script
                src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
                crossorigin="anonymous"
            ></script>
        {% endblock %}
    </body>
</html>
